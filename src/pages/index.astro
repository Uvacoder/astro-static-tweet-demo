---
import { StaticTweet } from '@rebelchris/astro-static-tweet';
import { Markdown } from 'astro/components';
const title = 'Astro Static Tweet component';
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="/style/global.css">
    <link rel="stylesheet" href="/style/home.css">

    <style>
        header {
            display: flex;
            flex-direction: column;
            gap: 1em;
            max-width: min(100%, 68ch);
        }
        article {
        padding-top: 2em;
        line-height: 1.5;
    }
    section {
        padding: 1em 1.5em;
                background: var(--color-light);
        margin-top: 2em;
        display: flex;
        flex-direction: column;
        gap: 1em;
        max-width: 70ch;
    }
    .banner {
        text-align: center;
        font-size: 1.2rem;
        background: var(--color-light);
        padding: 1em 1.5em;
        padding-left: 0.75em;
        border-radius: 4px;
    }
    pre,
    code {
        font-family: var(--font-mono);
        background: var(--color-light);
        border-radius: 4px;
    }
    pre {
        padding: 1em 1.5em;
    }
    .tree {
        line-height: 1.2;
    }
    code:not(.tree) {
        padding: 0.125em;
        margin: 0 -0.125em;
    }
    footer {
        font-size: 0.75rem;
        text-align: center;
        padding-top: 2rem;
    }
    </style>
</head>
<body>
    <main>
        <header>
            <div>
